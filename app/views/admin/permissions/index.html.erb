<%= link_to '添加权限', new_admin_permission_path, class: "btn btn-sm btn-primary", style: "margin-bottom: 5px;"%>
<br/>
<table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>模块</th>
      <th>权限</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%=permission.subject_class %></td>
        <td><%=permission.subject_action %></td>
        <td>
          <%= link_to '编辑', edit_admin_permission_path(permission),class: "btn btn-minier btn-warning"%>
          &nbsp;&nbsp;
          <%=link_to '删除', admin_permission_path(permission), class: "btn btn-minier btn-danger", method: :delete %>
        </td>
      <% end %>
  </tbody>
</table>
