<table  class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>名称</th>
      <th>操作( <%= link_to '添加角色', new_admin_role_path, class: 'btn btn-minier btn-primary','data-toggle': "modal", 'data-target': "#layer",remote: true%> )</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.title %></td>
        <td>
          <%=link_to "设置权限", list_admin_permissions_path(role_id: role.id), class: 'btn btn-minier btn-danger'%>
        </td>
      <% end %>
  </tbody>
</table>
<div role="dialog" class="modal fade" id="layer">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      <span id="new"></span>
    </div>
  </div>
  </div>
</div>

